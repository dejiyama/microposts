
<% if current_user.favoriting?(microposts) %>

<%= form_for(current_user.favorites.find_by(micropost_id: microposts.id), html: { method: :delete}) do |f| %>

<%= hidden_field_tag :micropost_id, microposts.id %>

<%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>

<% end %>

<% else %>

<%= form_for(current_user.favorites.build) do |f| %>

<%= hidden_field_tag :micropost_id, microposts.id %>

<%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>

<% end %>

<% end %>